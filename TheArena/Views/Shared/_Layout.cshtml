<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - The Arena</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-ta-main">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")" >The <span class="navbar-ta-main-a">A</span>rena <span class="fas fa-gamepad"></span> </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="container">
                <div class="row">
                    <form class="form-inline input-group my-2 my-lg-0 col-lg-5" method="GET" action="/search">
                        <input class="form-control mr-sm-2 search" type="search" placeholder="Rechercher" aria-label="Search" name="searchTerms">
                        <div class="input-group-append ">
                            <button class="btn btn-outline-success search-button my-0" type="submit"><span class="fas fa-search"></span> </button>
                        </div>
                    </form>
                    @Html.ActionLink("Recherche Avancée", "Search", "Advanced", new { @class = "nav-link" })
                    <ul class="nav col justify-content-end">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li id="username" class="nav-item">Bienvenue @User.Identity.Name</li>
                            <li>
                                <a class="btn btn-outline-success my-2 my-sm-0" href="@Url.Action("Logout","Login")">Se déconnecter</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a class="btn btn-outline-success my-2 my-sm-0"  href="@Url.Action("Index","Login")">Se connecter</a>
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("S'enregistrer", "User", "Inscription", new { @class = "nav-link" })
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <nav class="navbar navbar-expand-lg navbar-ta-menu">
        <div class="collapse navbar-collapse container justify-content-center" id="navbarMenuSupportedContent">
            <div class="row align-items-center ">
                <ul class="nav nav-fill align-middle">
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Home")" class="nav-link"><span class="fas fa-home"></span>Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Tournament")" class="nav-link"><span class="fas fa-calendar"></span> Tournois</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Team")"><span class="fas fa-users"></span>Equipes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><span class="fas fa-gamepad"></span> Jeux</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Geeks")"><span class="fas fa-user-circle"></span> Profil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Edit", "Geeks")"><span class="fas fa-cog"></span> Paramètres</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - The Arena</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
