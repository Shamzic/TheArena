<!DOCTYPE html>
<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - The Arena</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-ta-main">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")" >The <span class="navbar-ta-main-a">A</span>rena <span class="fas fa-gamepad"></span> </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="container">
                <div class="row">
                    @using (Html.BeginForm("Index", "Search", FormMethod.Get))
    {
                @Html.TextBox("search")<button class="btn btn-outline-success search-button my-0" type="submit"><span class="fas fa-search"></span> </button>
}

                   

                    @Html.ActionLink("Recherche Avancée", "Search", "Advanced", new { @class = "nav-link" })
                    <ul class="nav col justify-content-end">
                        @if (User.Identity.IsAuthenticated)
        {
                <li class="nav-link">Bienvenue <b><a href="@Url.Action("Index", "Geeks")">@User.Identity.Name </a> </b></li>
                <li>
                    <a class="nav-link" href="@Url.Action("Edit", "Geeks", new {id = User.Identity.Name })"><span class="fas fa-cog"></span></a>
                </li>
                <li>
                    <a class="btn btn-outline-success my-2 my-sm-0" href="@Url.Action("Logout","Login")">Se déconnecter</a>
                </li>
}
else
{
                <li>
                    <a class="btn btn-outline-success my-2 my-sm-0" href="@Url.Action("Index","Login")">Se connecter</a>
                </li>
                <li>
                    <a class="nav-link" href="@Url.Action("Register","Login")">S'enregistrer</a>
                </li>
}
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <nav class="navbar navbar-expand-lg navbar-ta-menu">
        <div class="collapse navbar-collapse container justify-content-center" id="navbarMenuSupportedContent">
            <div class="row align-items-center ">
                <ul class="nav nav-fill align-middle">
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Home")" class="nav-link"><span class="fas fa-home"></span>Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Tournament")" class="nav-link"><span class="fas fa-calendar"></span> Tournois</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Teams")"><span class="fas fa-users"></span>Equipes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><span class="fas fa-gamepad"></span> Jeux</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container main-container pt-3 pb-3">
        @RenderBody()
        <hr />
        <footer class="navbar navbar-fixed-bottom">
            <p>&copy; @DateTime.Now.Year - The Arena</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
